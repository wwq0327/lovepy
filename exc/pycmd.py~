#!/usr/bin/env python
#coding:utf-8

import sys
import os
import cmd

class pyCMD(cmd.Cmd):
    def __init__(self):
        cmd.Cmd.__init__(self)

    def help_EOF(self):
        print "退出本程序 Quits the program"

    def do_EOF(self):
        sys.exit()

    def help_update(self):
        print '开始更新你的系统...'

    def do_update(self):
        os.system("ls -la")

    def help_slist(self):
        print '更新你的源...'

    def do_slist(self):
        pass

    def help_initcmd(self):
        print '向 command.conf中添加自定义命令'

    def do_initcmd(self):
        pass

    def help_upcmd(self):
        print '远程更新你的安装命令集文件'

    def do_upcmd(self):
        pass
    def help_oschose(self):
        print '选择你现所正在使用的系统.'

    def do_oschose(self):
        pass

if __name__ == "__main__":
    cmd = pyCMD()
    cmd.cmdloop()
