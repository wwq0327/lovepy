#!/usr/bin/env python
#coding:utf-8

import urllib2
import re

def getPage(url):
    page = urllib2.urlopen(url)
    pageContent = page.read()
    page.close()
    return pageContent

def getWeather(webPage):
    regex = r'<strong class="altemp_special">(\d+)ï½ž(\d+) </strong>'
    match = re.findall(regex, webPage.decode('gbk').encode('utf-8'))
    print match


url = 'http://www.baidu.com/s?wd=%CC%EC%C6%F8'

htmlpage = getPage(url)
getWeather(htmlpage)
