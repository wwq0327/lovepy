#!/usr/bin/env python
#coding:utf-8

import HTMLParser
import urllib
import sys
urlString = 'http://www.python.org'

def getImage(addr):
    u = urllib.urlopen(addr)
    data = u.read()
    splitPath = addr.split("/")
    fName = splitPath.pop()
    print "Saving %s" % fName
    f = open(fName, 'wb')
    f.write(data)
    fclose()

class parseImages(HTMLParser.HTMLParser):
    def handle_starttag(self, tag, attrs):
        if tag == 'img':
            for name, value in attrs:
                if name == 'src':
                    getImage(urlString+"/"+value)

LParser = parseImages()
u = urllib.urlopen(urlString)
print "Opening URL\n====================="
print u.info()
IParser.feed(u.read())
IParser.close()
